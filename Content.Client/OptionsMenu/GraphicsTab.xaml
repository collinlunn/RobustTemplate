<Control xmlns="https://spacestation14.io"
         HorizontalAlignment="Left"
         VerticalAlignment="Top">
	<BoxContainer Orientation="Vertical">
		<CheckBox Name="VSyncCheckBox" Text="VSync" Margin="3"/>
		<CheckBox Name="FpsCounterCheckBox" Text="Show FPS Counter" Margin="3"/>
		<CheckBox Name="PingCounterCheckBox" Text="Show Ping Counter" Margin="3"/>
		<BoxContainer Name="WindowModeBox" Orientation="Horizontal" Margin="5">
			<Label Text="Window Mode" MinWidth ="100"/>
		</BoxContainer>
		<BoxContainer Name="UiSizeBox" Orientation="Horizontal" Margin="5">
			<Label Text="UI Scale" MinWidth ="100"/>
		</BoxContainer>
		<BoxContainer Orientation="Horizontal">
			<Button Name="ApplyButton" Text="Apply" Margin="3"/>
			<Button Name="ResetButton" Text="Reset" Margin="3"/>
		</BoxContainer>
	</BoxContainer>
</Control>