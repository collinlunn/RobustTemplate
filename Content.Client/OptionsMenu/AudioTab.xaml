<Control xmlns="https://spacestation14.io"
         HorizontalAlignment="Left"
         VerticalAlignment="Top">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal" Margin="5">
            <Label Text="Master Volume" />
            <Slider Name="MasterVolumeSlider"
                    MinValue="0"
                    MaxValue="100"
                    SetSize="250 30"
                    Rounded="True"
                    Margin="10 0 10 0"/>
            <Label Name="CurrentMasterVolumeLabel"/>
        </BoxContainer>
        <BoxContainer Orientation="Horizontal" Margin="5">
            <Button Name="ApplyButton" Text="Apply" SetWidth ="200"/>
        </BoxContainer>
    </BoxContainer>
</Control>