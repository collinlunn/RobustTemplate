<Control xmlns="https://spacestation14.io" HorizontalAlignment="Center" VerticalAlignment="Center">
    <PanelContainer MaxSize="900 900">
        <BoxContainer Orientation="Vertical" Margin="15 15 15 15" HorizontalExpand="True" VerticalExpand="True" SeparationOverride="5">
            <Label Text="Placeholder Menu Title" Align="Center" StyleClasses="LabelGame"/>
            <Label Text="Set Username" Align="Center"/>
            <LineEdit Name="UsernameLineEdit" PlaceHolder="Username..." MaxWidth="150"/>
            <Label Text="Connect to Server" Align="Center"/>
            <LineEdit Name="AddressLineEdit" PlaceHolder="Server address..." MaxWidth="150"/>
            <Button Name="ConnectButton" Access="Public" Text="Connect" TextAlign="Center" MaxWidth="150"/>
            <Label Text="Connect to Local Server" Align="Center"/>
            <Label Text="(Requires running server exe on this computer)" Align="Center"/>
            <Button Name="ConnectToLocalHostButton" Access="Public" Text="Connect To LocalHost" TextAlign="Center" MaxWidth="150"/>
            <Button Name="QuitButton" Access="Public" Text="Quit" TextAlign="Center" MaxWidth="150"/>
        </BoxContainer>
    </PanelContainer>
</Control>