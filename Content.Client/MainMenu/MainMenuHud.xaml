<Control xmlns="https://spacestation14.io" HorizontalAlignment="Center" VerticalAlignment="Center">
    <PanelContainer>
        <BoxContainer Orientation="Vertical">
            <Label Text="Placeholder Menu Title" StyleClasses="LabelGame"/>
            <BoxContainer Orientation="Horizontal">
                <Label Text="Set Username" SetWidth="200"/>
                <LineEdit Name="UsernameLineEdit" Access="Public" PlaceHolder="Username..." SetWidth="200"/>
            </BoxContainer>
            <Button Name="ConnectToLocalHostButton" Access="Public" Text="Connect To LocalHost"/>
            <BoxContainer Orientation="Horizontal">
                <LineEdit Name="AddressLineEdit" Access="Public" PlaceHolder="IP..." SetWidth="200"/>
                <Button Name="ConnectButton" Access="Public" Text="Username..." SetWidth="200"/>
            </BoxContainer>
            <Button Name="QuitButton" Access="Public" Text="Quit"/>
        </BoxContainer>
    </PanelContainer>
</Control>